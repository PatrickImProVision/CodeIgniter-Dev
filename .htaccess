<IfModule mod_rewrite.c>
    RewriteEngine On

    # Send all requests to the public folder
    RewriteCond %{REQUEST_URI} !^/Public/
    RewriteRule ^(.*)$ Public/$1 [L]
</IfModule>

# Deny access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

